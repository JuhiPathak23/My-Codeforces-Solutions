#include<bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while(t--){
    long long x1,y1,x2,y2;
        long long res=0;
        cin>>x1>>y1>>x2>>y2;
        if(x1==x2 || y1==y2)
            res=abs(x1-x2) + abs(y1-y2);
        else
            res=abs(x1-x2) + abs(y1-y2) + 2;
        cout<<res<<endl;
    }
    return 0;
}


