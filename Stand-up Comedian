#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int a, b, c, d;
        cin>>a>>b>>c>>d;
        long long res=1;
        if(a)
            res=a+ min(b,c)*2 + min(a+1,abs(b-c)+d);
        cout<<res<<endl;
    }
}

https://codeforces.com/problemset/problem/1792/B
