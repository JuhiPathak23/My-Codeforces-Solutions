#include<bits/stdc++.h>
using namespace std;
long long int a[1000000];
int main(){
    int t;
    long long int n,s1,s2,d,i,j;
    cin>>t;
    while(t--){
        s1=s2=0;
        cin>>n;
        if(n%4!=0)
            cout<<"NO\n";
        else{
            cout<<"YES\n";
            for(int i=2; i<=n; i+=2){
                cout<<i<<" ";
                s1+=i;
            }
            for(int i=1; i<n-2; i+=2){
                cout<<i<<" ";
                s2+=i;
            }
            cout<<s1-s2<<"\n";
        }
    }
}


