#include <iostream>
#include <string>
using namespace std;
int main(){
    int n,x(0);
    cin>>n;
    string st;
    while(n--){
        cin>>st;
        if(st[1]=='+')
            ++x;
        else
            --x;
    }
    cout<<x<<endl;
    return 0;
}


