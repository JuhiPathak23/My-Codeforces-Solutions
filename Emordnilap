#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main(){
  int t;
  cin>>t;
  while(t--){
    ll n;
    cin>>n;
    ll res = (n-1)*n;
    for(ll i = 1; i <= n; i++)
      res = ((res%1000000007)*i)%1000000007;
    cout<<res<<endl;
  }
}

https://codeforces.com/problemset/problem/1777/B
