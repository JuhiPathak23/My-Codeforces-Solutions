#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main(){
  int t;
  cin>>t;
  while(t--){
    ll a,b;
    cin>>a>>b;
    ll d=(a>=b)?(a-b):(b-a);
    if(a>b)
      cout<<d<<" "<<min(d-(a%d),b%d)<<endl;
    else if(b>a)
      cout<<d<<" "<<min(d-(b%d),a%d)<<endl;
    else
      cout<<0<<" "<<0<<endl;
  }
}

https://codeforces.com/problemset/problem/1543/A
