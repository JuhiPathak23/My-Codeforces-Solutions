#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    char c[n];
    cin>>c;
    int x=0;
    for(int i=0;i<n-1;i++){
        if(c[i]!=c[i+1]){
            x++;
            i++;
            continue;
        }
    }
    cout<<(n-x);
}


https://codeforces.com/problemset/problem/954/A
