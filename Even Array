#include<bits/stdc++.h>
using namespace std;
int main(){
  int t;
  cin>>t;
  while(t--){
    int n;
    cin>>n;
    int x;
    int e=0,o=0;
    for(int i=0;i<n;i++){
      cin>>x;
      if(x%2==0 && i%2!=0)
        e++;
      if(x%2!=0 && i%2==0)
        o++;
    }
    if(e==o){
      cout<<e<<endl;
      continue;
    }
    cout<<-1<<endl;
  }
}

https://codeforces.com/problemset/problem/1367/B
