#include<bits/stdc++.h>
using namespace std;
int main(){
  int t;
  cin>>t;
  while(t--){
    int n;
    cin>>n;
    int arr[n];
    int x, ans = 0;
    for(int i = 0; i < n; i++)
      cin>>arr[i];
    for(int i = 0; i < n-1; i++){
      if(((arr[i] % 2) and (arr[i+1]%2)) or ((arr[i]%2 == 0) and (arr[i+1]%2 == 0)))
        ans++;
    }
    cout<<ans<<endl;
  }
}


